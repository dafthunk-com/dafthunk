{
  "name": "@dafthunk/api",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev --live-reload --port 3001",
    "test": "vitest run",
    "lint": "pnpm run format:check && eslint .",
    "integration": "ts-node -P integration/tsconfig.json integration/execute.integration.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:prod:migrate": "wrangler d1 migrations apply DB --remote --env production",
    "db:prod:reset": "wrangler d1 execute DB --remote --env production --command=\"DROP TABLE IF EXISTS d1_migrations; DROP TABLE IF EXISTS workflows; DROP TABLE IF EXISTS node_types; DROP TABLE IF EXISTS users;\" && wrangler d1 migrations apply DB --remote --env production"
  },
  "devDependencies": {
    "@dafthunk/runtime": "workspace:*",
    "@cloudflare/workers-types": "^4.20250404.0",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.14.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.22.0",
    "vitest": "~3.0.1",
    "wrangler": "^4.7.1"
  },
  "dependencies": {
    "@hono/oauth-providers": "^0.7.1",
    "drizzle-orm": "^0.39.3",
    "hono": "^4.7.6",
    "jose": "^6.0.8",
    "jsonpath-plus": "^10.3.0",
    "uuid": "^11.1.0"
  }
}
